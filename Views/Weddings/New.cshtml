@{
    ViewData["Title"] = "Home Page";
}
@model Wedding; 

@{
    var ID = Context.Session.GetInt32("UUID");
    // var Name = Context.Session.GetString("FullName");
}
<div class="container px-5">
    <h1 class="display-4">Plan a Wedding!</h1>
    <hr>
    <form class="form-group d-flex justify-content-between m-5" asp-route-UserId=@ID asp-action="CreateWedding" asp-controller="Weddings" method="post">
        <div class="d-flex flex-column justify-content-between mx-2 ">
            
            @* <input type="hidden" asp-for="ChefName" value=@Name> *@

            <label asp-for="Wedder1"></label>
            <input asp-for="Wedder1">
            <span asp-validation-for="Wedder1" class="text-danger"></span>
            <br>
            <label asp-for="Wedder2"></label>
            <input asp-for="Wedder2">
            <span asp-validation-for="Wedder2" class="text-danger"></span>
            <br>
            <label asp-for="Date"></label>
            <input asp-for="Date">
            <span asp-validation-for="Date" class="text-danger"></span>
            <br>
        </div>
        <div class="d-flex flex-column justify-content-start mx-2">
            <label asp-for="Address"></label>
            <input asp-for="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
            <button class="btn btn-secondary mt-3" type="submit">Create</button>
        </div>
        @* <div class="d-flex flex-column justify-content-start mx-2">
            <label asp-for="Description"></label>
            <input asp-for="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div> *@
    </form>
</div>